# DriftBuddy Configuration Example
# Copy this file to .env and update with your actual values

# OpenAI Configuration
# Set your OpenAI API key for AI-powered explanations
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Demo API key for testing (limited functionality)
# DEMO_OPENAI_API_KEY=sk-demo-key-for-testing-only

# AI Settings
ENABLE_AI_EXPLANATIONS=true
USE_DEMO_KEY_FALLBACK=true
AI_EXPLANATION_LIMIT_PER_DAY=100
OPENAI_MODEL=o4-mini
OPENAI_MAX_TOKENS=2000

# AI Performance Settings
AI_MAX_CONCURRENT_REQUESTS=3
AI_REQUEST_TIMEOUT=60
AI_BATCH_SIZE=5

# KICS Configuration
KICS_TIMEOUT=300
KICS_OUTPUT_DIR=test_data/output
# KICS_QUERIES_PATH=kics/assets/queries

# Steampipe Configuration
STEAMPIPE_TIMEOUT=300
STEAMPIPE_PLUGINS=aws,azure,gcp

# Output Configuration
REPORTS_DIR=outputs/reports
ANALYSIS_DIR=outputs/analysis

# Security Settings
ENABLE_SECRETS_SCANNING=true
MAX_FILE_SIZE_MB=100

# Performance Settings
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT_MINUTES=30

# Feature Flags
ENABLE_HTML_REPORTS=true
ENABLE_MARKDOWN_REPORTS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
# LOG_FILE=logs/driftbuddy.log

# Debug Mode
DEBUG=false
